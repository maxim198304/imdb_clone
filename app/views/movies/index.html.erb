<h1 class="current-category"><%= params[:category] %></h1>

<% if @movies.count == 0 %>

<h1>There are no movies currently in this category</h1>

<% else %>

<div class="row">

  <% @movies.each do |movie| %>
    <div class="col-md-3">

      <div class="thumbnail">
        <%= link_to movie_path(movie) do %>
        <%= image_tag movie.image if movie.image.present? %>
        <% end %>
      </div>

      <div>
        <% movie.rating.to_i.times do  %>
          <span class="glyphicon glyphicon-star"></span>
        <% end %>
        <% movie.blank_stars.times do %>
          <span class="glyphicon glyphicon-star-empty"></span>
        <% end %>
      </div>

    </div>
  <% end %>

</div>

<div class="nav navbar-nav navbar-centered">
  <%= paginate @movies %>
</div>
<% end %>
